<div class="ui container main text">
    
    <div class="ui huge header" style="text-align:center;"><%=readmore.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img src= <%=readmore.image%> class="ui medium image rounded centered">
        </div>
        
          <a class="ui inverted green large button left floated" href="/blogs/<%=readmore._id%>/edit">Edit</a>
